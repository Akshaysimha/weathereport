<div>
  <span>
    <p>Min Temp</p><p><%= @min_temp %></p>
    <p>Max Temp</p><p><%= @max_temp %></p>
  </span>
</div>
<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

<script>
$(function () {
    Highcharts.chart('container', {
        title: {
            text: 'Daily Weather forcast',
            x: -20 //center
        },
        xAxis: {
          type: "datetime",
          title: {
              text: 'Time'
          }
        },
        yAxis: {
            title: {
                text: 'Temperature (°C)'
            },
        },
        tooltip: {
            valueSuffix: '°C'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [{
            name: 'Temperature',
            data:<%= @data %>
        }]
    });
});
</script>